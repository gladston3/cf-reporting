{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-tool-use-adr-gate.sh",
            "timeout": 30,
            "statusMessage": "Checking ADR gate…"
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-tool-use-secret-guard.sh",
            "timeout": 30,
            "statusMessage": "Scanning for secrets…"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/stop-quality-gate.sh",
            "timeout": 600,
            "statusMessage": "Running typecheck and tests…"
          }
        ]
      }
    ]
  }
}
